{
  "name": "focusduo",
  "version": "1.0.0",
  "description": "Brain-sync tool for multitasking professionals",
  "main": "main.js",
  "author": "FocusDuo Team",
  "license": "MIT",
  "homepage": "https://github.com/ashsofter/focus-duo",
  "repository": {
    "type": "git",
    "url": "https://github.com/ashsofter/focus-duo.git"
  },
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --publish always"
  },
  "build": {
    "appId": "com.focusduo.app",
    "productName": "FocusDuo",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "app.js",
      "index.html",
      "styles.css",
      "package.json",
      "license/**/*",
      "config/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        },
        {
          "target": "zip",
          "arch": ["universal"]
        }
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Utility",
      "icon": "build/icon.png"
    },
    "publish": {
      "provider": "github",
      "owner": "ashsofter",
      "repo": "focus-duo",
      "releaseType": "release"
    }
  },
  "keywords": [
    "electron",
    "productivity",
    "focus",
    "multitasking",
    "priority"
  ],
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "node-machine-id": "^1.1.12"
  }
}
